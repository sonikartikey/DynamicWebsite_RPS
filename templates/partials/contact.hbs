<div class="container-fluid mt-5 contact-style" id="contactid">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <h1 class="text-center main-heading">Contact Us</h1>
      <p class="text-center sub-heading">We will happy to help you</p>
      <div class="row">
        <div
          class="col-md-6 col-12 hero-text order-md-0 order-1 d-flex justify content-center align-items-start flex-column">


          <form action="/contact" method="POST">
            <div class="form-group">
              <label for="exampleInputPassword1">Name</label>
              <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter Full Name"
                name="name">

            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Email Address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your Email"
                name="email">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                else.</small>
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Phone</label>
              <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Phone Number"
                name="phone">
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Message</label>
              <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Emter your Message"
                name="message">
            </div>

            <button type="submit" class="btn-style btn-primary">Submit</button>
            <div class="form-group">
              <label for="exampleInputPassword1">OR</label>

            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">You can Directly Contact to 9045004177 or Email us
                rajphotostudio@gmail.com</label>
            </div>
          </form>
        </div>
        {{!-- right side --}}
        <div class="col-md-6 col-12 hero-text order-md-1 order-0">
          <figure>
            <img src="images/contact me.svg" alt="I ma here">
          </figure>
        </div>
      </div>
    </div>
  </div>
</div>